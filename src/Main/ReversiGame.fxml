<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<HBox fx:id="root" prefHeight="500.0" prefWidth="600.0" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.ReversiGameController">
   <children>
   <VBox alignment="TOP_CENTER" spacing="15.0">
      <children>
          <Label fx:id="currentPlayer">Current Player:</Label>
          <Label fx:id="p1Score">Player 1 score:</Label>
          <Label fx:id="p2Score" text="Player 2 score:">Player 2 score: </Label>
          <Button onAction="#settingsWindow">Game Settings</Button>
          <Button onAction="#restartGame">Restart Game</Button>
          <Button onAction="#exitApp">Exit</Button>
      </children>
         <HBox.margin>
            <Insets bottom="20.0" left="5.0" right="5.0" top="20.0" />
         </HBox.margin>
   </VBox>
   </children>
</HBox>
